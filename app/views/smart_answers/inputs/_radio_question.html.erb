<%= selected_value = nil %>

<% if use_session %>
  <% question_name = params[:node_slug]&.gsub("-", "_") %>
  <% selected_value = session.dig(params[:id], question_name) %>
<% end %>

<%= render "govuk_publishing_components/components/radio", {
  name: "response",
  heading: question.title,
  heading_size: "l",
  heading_caption: question.caption,
  is_page_heading: true,
  hint: question.hint,
  id_prefix: "response",
  description: question.body,
  error_message: question.error,
  items: question.radio_buttons(selected_value)
} %>
